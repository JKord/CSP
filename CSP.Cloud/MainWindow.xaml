<Window x:Class="CSP.Cloud.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSP.Cloud"
        mc:Ignorable="d" Style="{StaticResource VSWindowStyle}"
        Title="Cloud" Width="620" Height="380" MinWidth="620" MinHeight="380">
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <GroupBox Header="Settings" Grid.Column="2" Style="{StaticResource WindowGroupBoxStyle}" Margin="0,0,0,155">
            <StackPanel Margin="3">
                <StackPanel.Resources>
                    <Style TargetType="{x:Type TextBox}">
                        <Setter Property="Margin" Value="0,0,0,5"/>
                    </Style>
                </StackPanel.Resources>
                <TextBox x:Name="tbPort" Tag="Port" Text="1006" Style="{StaticResource TextBoxWithLabelStyle}"/>
                <Button x:Name="btnServer" Content="Start" Click="btnServer_Click" Style="{StaticResource BaseButtonStyle}"/>
            </StackPanel>
        </GroupBox>

    </Grid>
</Window>
